@page
@model WebApplication1.Pages.loginModel
@{
    Boolean iscustomer = true;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login Page</title>
        <style>


            html, body {
                margin: 0px;
                padding: 0;
                width: 100%;
                height: 100%;
                overflow-x: hidden; /* This will prevent horizontal scrolling */
                overflow-y: hidden; /* This will prevent horizontal scrolling */
            }


            .gradient-background {
                top: -1%;
                right: -1%;
                position: absolute;
                width: 100%;
                height: 100vh;
                background-image: linear-gradient(to bottom left, #0A8ED9 30%, #fff 50%);
                z-index: -1;
            }

            
            /***********************************************/
            /***********************************************/
            /***********************************************/
            /***********************************************/



            .login-wrapper {
                display: flex;
                justify-content: center;
                align-items: center;
                margin-top: -70px;
                height: 100vh;
            }




            .login-container {
                background-color: #fff;
                border-radius: 20px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                padding: 20px;
                width: 300px;
            }

            .login-header {
                display: flex;
                justify-content: space-around;
                margin-bottom: 20px;
            }

            .tab-button {
                background: none;
                border: none;
                border-bottom: 2px solid transparent;
                outline: none;
                padding: 10px;
                cursor: pointer;
                font-weight: bold;
            }

                .tab-button.active {
                    border-bottom: 2px solid #007bff;
                }

            .login-form input {
                width: 100%;
                padding: 15px;
                margin: 10px 0;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .forgot-password {
                display: block;
                text-align: right;
                color: #007bff;
                text-decoration: none;
                margin-bottom: 20px;
            }

            .login-btn {
                width: 100%;
                background-color: #333;
                color: white;
                padding: 7px;
                border: none;
                border-radius: 10px;
                cursor: pointer;
            }

                .login-btn:hover {
                    background-color: #0056b3;
                }

            .signup-text {
                text-align: center;
                margin-top: 20px;
            }

            .signup-link {
                color: #007bff;
                text-decoration: none;
                font-weight: bold;
            }


            
        </style>
    </head>



    <body>

        <div class="gradient-background"></div>

        


        <div class="login-wrapper">
            <div class="login-container">
                <div class="login-header">
                    <button class="tab-button active">Müşteri</button>
                    <button class="tab-button">Çalışan</button>
                </div>

                <form class="login-form" method="post">
                    <input type="text" name="username" placeholder="ePosta" required>
                    <br>
                    <input type="password" name="password" placeholder="Password" required>
                    <br>
                <input type="hidden" name="isCustomer" id="isCustomer" value="@iscustomer.ToString()" />
                    <a href="#" class="forgot-password">Şifreinizi Unutunuz Mu?</a>
                    <button type="submit" class="login-btn" value="Submit" asp-page-handler="Submit">Giriş Yap</button>
                    <p class="signup-text">Yeni Hesap Oluştur<a href="/Index" > Hemen Öye Ol</a></p>
                </form>
            @Model.msg
            </div>
        </div>

        <script>
            // Get all the tab buttons into a NodeList
            var tabButtons = document.querySelectorAll('.tab-button');
            var isCustomer = document.getElementById('isCustomer');

            // Loop through each button and add a click event listener
            tabButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    // Remove the 'active' class from all buttons
                    tabButtons.forEach(function (btn) { btn.classList.remove('active'); });
                    // Add the 'active' class to the clicked button
                    this.classList.add('active');
                    if (button.textContent === "Müşteri") {
                        @iscustomer = true;
                    } else { 
                        @iscustomer = false;
                    }
                    isCustomer.value = @iscustomer.ToString();
            });
            });
        </script>

    


    </body>
</html>