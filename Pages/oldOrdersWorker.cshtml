    <body>


        <div class="d-flex flex-wrap justify-content-center">

            @{
                if (services != null)
                {
                    foreach (Order servis in services)
                    {
                        if (!servis.te_fiyat.Equals(""))
                        {

                            <div class="order-card">

                                
                                <h11>Telap Tarihi : </h11> <h111>@servis.order_date</h111>
                                <h12>Konum : </h12> <h122>@servis.cu_city / </h122> <h1222>@servis.cu_addres</h1222>
                                <h13>@servis.cu_name</h13>

                                <h14>Müşteri No : </h14> <h144>@servis.cu_id</h144>
                                <h15>TelapNumarasi : @servis.sd_id</h15>
                                <h16>Başlangiç Tarihi : @servis.baslangic_tarihi</h16>


                                <form method="post">
                                    @if (servis.te_fiyat.Equals(""))
                                    {
                                        <input type="hidden" name="sd_id" value="@servis.sd_id" />
                                        <input type="hidden" name="s_view_mode" value="@servis.s_view_mode" />
                                        <button type="submit" name="handler" value="Details" class="button11">Faturayi Göster</button>
                                        <input type="number" name="teklif" placeholder="Fiyati Giriniz!" class="input11" />
                                        <button type="submit" name="handler" value="Teklifver" class="button22">Teklif Ver</button>
                                    }
                                    else
                                    {
                                        
                                        <input type="hidden" name="sd_id" value="@servis.sd_id" />
                                        <input type="hidden" name="s_view_mode" value="@servis.s_view_mode" />
                                        <button class="button333" type="submit" name="handler" value="Fatura">Faturayı Göster</button>


                                        <h17>Verdiğiniz Teklif : </h17> <h177>@servis.te_fiyat TL</h177>
                                        <h18>Teklif Zamanı : </h18> <h188>@servis.te_date</h188>


                                        if (servis.te_stat.Equals("-1"))
                                        {
                                            <h19>Teklif Durumu : </h19> <h199>Teklif Rededildi.</h199>
                                        }
                                        else if (servis.te_stat.Equals("0"))
                                        {
                                            <h19>Teklif Durumu : </h19> <h199>Yanıt Verilmedi.</h199>
                                        }
                                        else if (servis.te_stat.Equals("1"))
                                        {
                                            <h19>Teklif Durumu : </h19> <h199>Kabul Edildi.</h199>
                                        }

                                    }

                                </form>
