@page
@model WebApplication1.Pages.oldOrdersModel
@{
    Layout = "_LayoutWithSidebar";
    List<Orderss> orders = (List<Orderss>)TempData["order"];
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login Page</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    
    
        <style>

            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                margin-bottom: 2.5%;
                overflow-x: hidden;
            }

            .order-card {
                background: #333;
                border-radius: 25px;
                box-shadow: 10px 20px 40px rgba(0, 0, 0, 0.9);
                margin-top: 10px;
                
                padding: 80px;
                width: 1150px;
                height: auto;
                margin-bottom: 3%;
                position: relative; /* Needed for absolute positioning of the service name */
            }

                .order-card h11 {
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    position: absolute; /* Position the service name absolutely */
                    top: 15px; /* Position from the top of the card */
                    right: 90%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.5rem; /* Increase font size for visibility */
                }


                .order-card h1 {
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    position: absolute; /* Position the service name absolutely */
                    top: 15px; /* Position from the top of the card */
                    right: 30px; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.5rem; /* Increase font size for visibility */
                }


                .order-card h13 {
                    position: absolute; /* Position the service name absolutely */
                    margin-left: 100px; /* Remove margin from h1 for tighter spacing */
                    top: 20px; /* Position from the top of the card */
                    margin-right: 90%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.1rem; /* Increase font size for visibility */
                }

                .order-card h14 {
                    position: absolute; /* Position the service name absolutely */
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    top: 70px; /* Position from the top of the card */
                    margin-right: 10%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                }

                .order-card h15 {
                    position: absolute; /* Position the service name absolutely */
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    top: 90px; /* Position from the top of the card */
                    margin-right: 10%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                }

                .order-card h16 {
                    position: absolute; /* Position the service name absolutely */
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    top: 110px; /* Position from the top of the card */
                    margin-right: 10%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                }

                 .order-card h17 {
                    position: absolute; /* Position the service name absolutely */
                    margin: 0; /* Remove margin from h1 for tighter spacing */
                    top: 130px; /* Position from the top of the card */
                    margin-right: 10%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                 }


                 .order-card h18 {
                    position: absolute; /* Position the service name absolutely */
                    top: 70px; /* Position from the top of the card */
                    margin-left: 5%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                    right: 500px;
                 }

                 .order-card h19 {
                     position: absolute; /* Position the service name absolutely */
                     top: 90px; /* Position from the top of the card */
                     margin-left: 5%; /* Position from the right of the card */
                     color: #fff; /* Set a color that is visible on the background */
                     font-size: 1.0rem; /* Increase font size for visibility */
                     right: 522px;
                 }
                 

                 .order-card h20 {
                    position: absolute; /* Position the service name absolutely */
                    top: 110px; /* Position from the top of the card */
                    margin-left: 5%; /* Position from the right of the card */
                    color: #fff; /* Set a color that is visible on the background */
                    font-size: 1.0rem; /* Increase font size for visibility */
                    right: 536px;
                 }
                 

                 .order-card h21 {
                     position: absolute; /* Position the service name absolutely */
                     top: 130px; /* Position from the top of the card */
                     margin-left: 5%; /* Position from the right of the card */
                     color: #fff; /* Set a color that is visible on the background */
                     font-size: 1.0rem; /* Increase font size for visibility */
                     right: 467px;
                 }
                 

                .order-card form {
                    text-align: center;
                    position: absolute; /* Ensure form does not affect the flow of the document */
                    bottom: 20px; /* Position form at the bottom of the card */
                    left: 77%; /* Center form horizontally */
                    transform: translateX(-50%); /* Offset form by half its width for true centering */
                    width: 20%; /* Form takes full width of the card */
                }


                .order-card button {
                    background: linear-gradient(180deg, rgba(255, 223, 120, 0.8) 0%, rgba(255, 105, 180, 0.8) 100%);
                    color: white;
                    border: none;
                    padding: 10px 20px;
                    border-radius: 50px;
                    cursor: pointer;
                    font-size: 1.2rem;
                    margin: 0px 0px;
                    transition: background-color 0.5s;
                    margin-right: -355px;
                }

                    .order-card button:hover {
                        background-color: #0056b3;
                    }


            .order-details {
                padding: 10px 20px; /* Add padding inside the details container */
                color: #fff; /* Text color */
            }





        </style>
    </head>

    <body>
        <div class="d-flex flex-wrap justify-content-center">
            @{
                if (orders != null)
                {
                    foreach (Orderss order in orders)
                    {
                        <div class="order-card">
                        
                            <a>
                                <div class="order-details">
                                
                                    <h11>@order.s_name</h11>
                                    <h1>@order.order_date</h1>
                                    <h13>order fiyat : @order.te_fiyat</h13>

                                    <h14>MustariName : @order.cu_name</h14>
                                    <h15>MustariNo : @order.customer_id</h15>
                                    <h16>MustariAdres : @order.cu_addres</h16>
                                    <h17>TelapNo : @order.sd_id</h17>

                                    <h18>calisanName : @order.wo_name</h18>
                                    <h19>CalisanNo : @order.wo_id</h19>
                                    <h20>CalisanCepNo : @order.wo_tel</h20>
                                    <h21>TeklifiVerilenTarihi : @order.te_date</h21>

                                </div>
                            </a>
                            <form method="post">
                                <input type="hidden" name="sd_id" value="@order.sd_id" />
                                <input type="hidden" name="s_view_mode" value="@order.s_view_mode" />
                                <button type="submit" name="handler" value="fatura">Faturayı Gör</button>
                            </form>

                        </div>
                    }
                }
            }
        </div>
    </body>
</html>
