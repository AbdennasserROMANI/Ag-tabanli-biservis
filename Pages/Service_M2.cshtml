@page
@model WebApplication1.Pages.ServicePages.Service_M2Model
@{
    Layout = "_LayoutWithSidebar";
    string s_id = (String)Request.Query["s_id"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... other head elements ... -->
    <link rel="stylesheet" href="https://code.jquery.com/jquery-3.6.4.min.js">
    <style>

        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: #f4f4f4;
        }

        .container-fluid {
            width: 1260px; /* Increased width */
            margin: auto;
            height: auto;
            padding: 20px;
        }

        .card {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            padding: 30px;
            margin-bottom: 30px;
        }

        .header h2 {
            margin: 0;
            padding-bottom: 15px;
            border-bottom: 2px solid #007bff;
            color: #007bff;
            font-size: 24px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border-radius: 8px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 16px;
        }

        .form-line {
            margin-bottom: 20px;
        }

        .font-12 {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        button[type=submit] {
            margin-top: 20px;
            background-color: #00CDC4;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s;
            display: block; /* Make the button full-width */
            width: 100%;
        }

        button[type=submit]:hover {
            background-color: #333;
        }

        .image {
            border: none;
        }

        
    </style>
</head>
<body>
    <section class="content">
        <div class="container-fluid">
            <form id="form_validation" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="header">
                        @if(s_id.Equals("2")){
                            <h2>Tesisatçı</h2>
                        }
                        else @if (s_id.Equals("3"))
                        {
                            <h2>Electrikçi</h2>
                        }
                        else @if (s_id.Equals("4"))
                        {
                            <h2>Boyacı</h2>
                        }
                        else @if (s_id.Equals("5"))
                        {
                            <h2>Marangoz</h2>
                        }

                    </div>
                    <div class="body">
                        


                         <div class="form-group col-sm-12">
                            <div class="form-line">
                                <div class="font-12">Ne islem yapmak istiyorsun ??</div>
                                <input type="text" class="form-control" name="not" id="not" placeholder="Ne islem yapmak istiyorsun ??" required>
                            </div>
                        </div>

                        <div class="form-group col-sm-12">
                            <div class="font-12">DateTime:</div>
                            <input class="form-control" name="time" asp-for="CurrentTime" asp-format="{0:yyyy-MM-ddTHH:mm}">
                        </div>

                        <div class="form-group col-sm-6">
                            <div class="font-12 ex1">Image</div>
                            <input type="file" name="image" id="image" class="image" data-max-file-size="3M" data-allowed-file-extensions="jpg jpeg png gif">
                        </div>

                        <input type="hidden" name="s_id" value="@s_id">

                        <div class="form-group col-sm-12">
                            <button type="submit" value="Submit" asp-page-handler="Submit">Gönder</button>
                        </div>



                    </div>
                </div>
            </form>
        </div>
    </section>
</body>
</html>


